// Продвинутые тесты интерполяции
let x = 42

// Интерполяция в начале
println("${x} это ответ на все вопросы")

// Интерполяция в конце  
println("Ответ: ${x}")

// Только интерполяция
println("${x}")

// Вложенные выражения
let obj = { data: { value: 100 } }
println("Значение: ${obj.data.value}")

// Арифметика в интерполяции
println("2 * 3 = ${2 * 3}")

// Условные выражения в интерполяции (упрощенный вариант)
let age = 18
println("Статус: ${age >= 18 ? 1 : 0}")

// Методы в интерполяции
let numbers = [10, 20, 30]
println("Первый: ${numbers[0]}, длина: ${numbers.length()}")

println("Все тесты интерполяции прошли успешно!")