println("Тест локальных областей видимости:")

println("Цикл 1 с переменной i:")
for let i = 0; i < 3; i++ {
    print(i + " ")
}
println("")

println("Цикл 2 с переменной i (должен работать):")  
for let i = 5; i < 8; i++ {
    print(i + " ")
}
println("")

println("Создание массива 1 с переменной i:")
const arr1 = for let i = 0; i < 3; i++ {
    yield i * 2
}
println(arr1)

println("Создание массива 2 с переменной i:")
const arr2 = for let i = 10; i < 13; i++ {
    yield i
}
println(arr2)