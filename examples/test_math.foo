println("\n=== Практические примеры ===")

// Вычисление расстояния между точками
fn distance(x1, y1, x2, y2) {
    let dx = x2 - x1
    let dy = y2 - y1
    return sqrt(pow(dx, 2) + pow(dy, 2))
}

let dist = distance(0, 0, 3, 4)
println("Расстояние от (0,0) до (3,4) = " + dist)

// Площадь круга
fn circleArea(radius) {
    let pi = 3.14159
    return pi * pow(radius, 2)
}

let area = circleArea(5)
println("Площадь круга радиусом 5 = " + area)