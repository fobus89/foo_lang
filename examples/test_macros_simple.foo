// Простая демонстрация макросов в foo_lang

// Простой макрос для отладки
macro debug(expr) {
    println("DEBUG: evaluating expression")
    println(expr)
}

// Макрос для проверки условий
macro assert(condition, message) {
    if !condition {
        println("ASSERTION FAILED: " + message)
    }
}

println("=== Тестирование макросов ===")

// Использование debug макроса
let x = 10
@debug(x * 2)

// Использование assert макроса
@assert(x > 0, "x должен быть положительным")
@assert(x < 5, "x должен быть меньше 5")

println("\nМакросы работают!")