println("=== STRING FUNCTIONS TEST ===")
println("")

// –¢–µ—Å—Ç strlen - –ø–æ–ª—É—á–µ–Ω–∏–µ –¥–ª–∏–Ω—ã —Å—Ç—Ä–æ–∫–∏
let text = "Hello World"
let len = strlen(text)
println("Text: " + text)
println("Length: " + len)
println("")

// –¢–µ—Å—Ç charAt - –ø–æ–ª—É—á–µ–Ω–∏–µ —Å–∏–º–≤–æ–ª–∞ –ø–æ –∏–Ω–¥–µ–∫—Å—É  
let char0 = charAt(text, 0)
let char6 = charAt(text, 6)
println("Character at index 0: " + char0)  // H
println("Character at index 6: " + char6)  // W
println("")

// –¢–µ—Å—Ç substring - –∏–∑–≤–ª–µ—á–µ–Ω–∏–µ –ø–æ–¥—Å—Ç—Ä–æ–∫–∏
let hello = substring(text, 0, 5)
let world = substring(text, 6, 11)
println("Substring(0,5): " + hello)  // Hello
println("Substring(6,11): " + world) // World
println("")

// –¢–µ—Å—Ç startsWith - –ø—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞—á–∞–ª–∞ —Å—Ç—Ä–æ–∫–∏
let startsHello = startsWith(text, "Hello")
let startsBye = startsWith(text, "Bye")
println("Starts with 'Hello': " + startsHello)  // true
println("Starts with 'Bye': " + startsBye)     // false
println("")

// –¢–µ—Å—Ç endsWith - –ø—Ä–æ–≤–µ—Ä–∫–∞ –∫–æ–Ω—Ü–∞ —Å—Ç—Ä–æ–∫–∏
let endsWorld = endsWith(text, "World")
let endsTest = endsWith(text, "Test")
println("Ends with 'World': " + endsWorld)  // true  
println("Ends with 'Test': " + endsTest)    // false
println("")

// –¢–µ—Å—Ç indexOf - –ø–æ–∏—Å–∫ –ø–æ–¥—Å—Ç—Ä–æ–∫–∏
let posHello = indexOf(text, "Hello")
let posWorld = indexOf(text, "World")
let posNotFound = indexOf(text, "xyz")
println("Position of 'Hello': " + posHello)    // 0
println("Position of 'World': " + posWorld)    // 6
println("Position of 'xyz': " + posNotFound)   // -1
println("")

