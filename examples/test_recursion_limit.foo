// Тест ограничения глубины рекурсии
fn deepRecursion(n) {
    if n <= 0 {
        return 0
    }
    return deepRecursion(n - 1) + 1
}

// Безопасный тест
println("deepRecursion(10) = " + deepRecursion(10))

