// Простой тест системы типов

// Определяем простую структуру
struct Person {
    name: string,
    age: int
}

println("=== Демонстрация типов ===")

// Тестируем typeof с примитивными типами
let x = 42
let str = "hello"
let flag = true

println("typeof(42): " + typeof(x).String())
println("typeof(\"hello\"): " + typeof(str).String())
println("typeof(true): " + typeof(flag).String())

// Получаем информацию о структуре
let personType = type(Person)
println("Person type: " + personType.String())

// Простой макрос для работы с типами
macro showTypeInfo(structType) {
    println("Type name: " + structType.Name)
    println("Type kind: " + structType.Kind)
}

@showTypeInfo(personType)

println("Типы работают!")