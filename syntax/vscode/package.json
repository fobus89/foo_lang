{
  "name": "foo-lang",
  "displayName": "Foo Language Support",
  "description": "Full language support for Foo programming language with LSP",
  "version": "1.1.5",
  "publisher": "foolang",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Syntax Highlighting"
  ],
  "activationEvents": [
    "onLanguage:foo"
  ],
  "main": "./out/extension.js",
  "keywords": [
    "foo",
    "foo-lang",
    "programming-language",
    "syntax-highlighting",
    "lsp",
    "language-server"
  ],
  "contributes": {
    "languages": [
      {
        "id": "foo",
        "aliases": [
          "Foo",
          "foo"
        ],
        "extensions": [
          ".foo"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "foo",
        "scopeName": "source.foo",
        "path": "./syntaxes/foo.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Foo Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/foo-dark-color-theme.json"
      },
      {
        "label": "Foo Light",
        "uiTheme": "vs",
        "path": "./themes/foo-light-color-theme.json"
      }
    ],
    "commands": [
      {
        "command": "foo.restart",
        "title": "Restart Foo Language Server",
        "category": "Foo"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Foo Language",
      "properties": {
        "foo.maxCompletionItems": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of completion items to show"
        },
        "foo.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time diagnostics"
        },
        "foo.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover information"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/foo-lang"
  },
  "author": "Foo Lang Team",
  "license": "MIT"
}
